{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "strict": true,
    "target": "es5"
  },
  "exclude": ["./node_modules/**/*", "./dist/**/*", "./src/**/*.spec.*", "./src/**/*.test.*"],
  "include": ["./src/**/*.js", "./src/**/*.ts"],
  "compileOnSave": true
}
