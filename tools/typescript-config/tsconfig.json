{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "lib": ["es6"],
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "declaration": true,
    "strict": true
  },
  "include": ["./src/**/*.(j|t)sx?"],
  "exclude": ["./node_modules/**/*"],
  "jsx": "preserve",
  "compileOnSave": true
}
